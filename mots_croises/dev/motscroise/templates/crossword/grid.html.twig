<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Crossword</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400..700&display=swap');

        body {
            font-family: Arial, sans-serif;
            text-align: center;
            background: url('./images/background.png') no-repeat center center fixed;
            background-size: cover;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: flex-start;
            min-height: 100vh;
            margin: 0;
            overflow-y: auto;
            padding: 20px;
        }
        .container {
            position: relative;
            display: flex;
            flex-direction: column;
            align-items: center;
            background: rgba(255, 255, 255, 0.8);
            padding: 20px;
            border-radius: 15px;
            margin-bottom: 50px;
            margin-top: 50px;
        }
        video {
            width: 80%;
            max-width: 300px;
            height: auto;
        }
        .bubble {
            position: absolute;
            top: -40px;
            right: 10px;
            background-color: #e0f7fa;
            padding: 15px;
            border-radius: 10px;
            border: 2px solid #0079ff;
            box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2);
            font-size: 20px;
            max-width: 200px;
            font-family: "Dancing Script", cursive;
            font-optical-sizing: auto;
            font-weight: 400;
            font-style: normal;
        }
        .bubble::after {
            content: "";
            position: absolute;
            bottom: -10px;
            left: 20%;
            width: 0;
            height: 0;
            border-left: 10px solid transparent;
            border-right: 10px solid transparent;
            border-top: 10px solid #e0f7fa;
        }
        .start-button {
            display: inline-block;
            padding: 12px 30px;
            font-size: 18px;
            font-weight: bold;
            color: white;
            background: linear-gradient(45deg, #007bff, #00c6ff);
            border: none;
            border-radius: 50px;
            box-shadow: 0 4px 15px rgba(0, 123, 255, 0.3);
            text-transform: uppercase;
            letter-spacing: 1px;
            cursor: pointer;
            transition: all 0.3s ease-in-out;
            text-decoration: none;
            margin-top: 30px;
        }
        .start-button:hover {
            background: linear-gradient(45deg, #ff4b2b, #ff416c);
            box-shadow: 0 6px 20px rgba(255, 65, 108, 0.5);
            transform: translateY(-2px);
        }
        .start-button:active {
            transform: translateY(1px);
            box-shadow: 0 3px 10px rgba(255, 65, 108, 0.3);
        }
        .definition-label {
            text-align: left;
            width: 100%;
            margin-top: 20px;
            margin-bottom: 0;
            max-width: 400px;
            font-size: 16px;

        }

        .definition-container {
            text-align: left;
            width: 90%;
            max-width: 400px;
            margin-top: 0;
            font-size: 14px;
            line-height: 1.6;
            word-wrap: break-word;
            padding: 0;
        }
        .definition-container p {
            white-space: pre-line;
        }

        .grille-container {
            margin: 20px;
        }

        table {
            border-collapse: collapse;
        }

        td {
            width: 40px;
            height: 40px;
            border: 1px solid #000;
            text-align: center;
            vertical-align: middle;
            position: relative;
        }

        .case-numero {
            position: absolute;
            top: 2px;
            left: 2px;
            font-size: 10px;
            color: #666;
        }

        .case-contenu {
            font-size: 16px;
        }

        #definition-modal {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: white;
            padding: 20px;
            border: 1px solid #000;
            z-index: 1000;
        }

        .hidden {
            display: none;
        }

        .blur {
            filter: blur(5px);
        }


    </style>
</head>
<body>
<h1>Grille de Mots Croisés</h1>
<div class="container">
<div class="grille-container">
    <table>
        {% for x in 1..13 %}
            <tr>
                {% for y in 1..9 %}
                    {% if grille[x][y].numero or grille[x][y].mot %}
                    <td class="case"
                        data-x="{{ x }}"
                        data-y="{{ y }}"
                        data-mot-id="{{ grille[x][y].mot ? grille[x][y].mot.id : '' }}"
                        onclick="openDefinition({{ grille[x][y].mot ? grille[x][y].mot.id : 'null' }})">
                        {% if grille[x][y].numero %}
                            <div class="case-numero">{{ grille[x][y].numero }}</div>
                        {% endif %}
                        <div class="case-contenu">{{ grille[x][y].contenu }}</div>
                    </td>
                    {% endif %}
                {% endfor %}
            </tr>
        {% endfor %}
    </table>
</div>
</div>
<!-- Modale pour afficher la définition et saisir la réponse -->
<div id="definition-modal" class="hidden">
    <p id="definition-text"></p>
    <input type="text" id="answer" maxlength="10">
    <button onclick="checkAnswer()">Valider</button>
</div>

<script>
    let currentMotId = null;

    function openDefinition(motId) {
        if (!motId) return;

        currentMotId = motId;

        fetch(`/definition/${motId}`)
            .then(response => response.json())
            .then(data => {
                document.getElementById('definition-text').textContent = data.definition;
                document.getElementById('definition-modal').classList.remove('hidden');
                document.querySelector('.grille-container').classList.add('blur');
            });
    }

    function checkAnswer() {
        const answer = document.getElementById('answer').value.toUpperCase();

        fetch(`/validate/${currentMotId}`, {
            method: 'POST',
            body: JSON.stringify({ answer: answer }),
            headers: { 'Content-Type': 'application/json' }
        })
            .then(response => response.json())
            .then(data => {
                if (data.correct) {
                    alert('Bravo ! Vous avez trouvé le mot.');
                    location.reload();
                } else {
                    alert('Mauvaise réponse. Réessayez.');
                    document.querySelectorAll(`.case[data-mot-id="${currentMotId}"] .case-contenu`).forEach(cell => {
                        cell.textContent = '';
                    });
                }

                document.getElementById('definition-modal').classList.add('hidden');
                document.querySelector('.grille-container').classList.remove('blur');
            });
    }
</script>

</body>
</html>
